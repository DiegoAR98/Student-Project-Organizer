<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6">Signup</h2>

    <form class="signup-form">
        <div class="mb-4">
            <label for="username-signup" class="block text-gray-700 text-sm font-bold mb-2">Username:</label>
            <input type="text" id="username-signup" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
        </div>
        <div class="mb-4">
            <label for="password-signup" class="block text-gray-700 text-sm font-bold mb-2">Password:</label>
            <input type="password" id="password-signup" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
        </div>
        <div class="flex justify-center">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Signup</button>
        </div>
    </form>
</div>

<script src="./js/signup.js"></script>
