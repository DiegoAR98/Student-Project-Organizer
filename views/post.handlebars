<div class="text-center post_id" value="{{id}}">
  <h2>{{title}}</h2>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
  <p>{{content}}</p>
</div>

{{#if comments}}
{{#each comments as |comment|}}
<div class="text-center">
  <h4>{{comment.commentBody}}</h4>
  <p>-{{comment.user.username}} on {{format_date comment.date_created}}</p>
</div>
{{/each}}
{{/if}}

{{#if logged_in}}
<form class="form new-comment-form">
  <div class="form-group">
    <label for="comment">Comment</label>
    <input class="form-input" type="text" id="comment" name="comment" />
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>
{{/if}}

<script src="./js/newComment.js"></script>