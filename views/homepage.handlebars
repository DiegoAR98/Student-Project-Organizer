<!-- Loop over each object in the posts array -->
{{#each posts as |post|}}
<div class="row mb-4 project">
  <div class="col-md-5">
    <a href="/post/{{post.id}}">
      <h3>{{post.title}}</h3>
      <h5>Course: {{post.course_name}}</h5>
      <h5>Due: {{format_date post.due_date}}</h5>
      <h5>Priority: {{capitalize post.priority}}</h5>
      <h5>Status: {{capitalize post.status}}</h5>
      <h6>Posted by {{post.user.username}} on {{format_date post.date_created}}</h6>
      <p>{{post.content}}</p>
    </a>
  </div>
</div>
{{/each}}
